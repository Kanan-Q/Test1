@model List<Department>;

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Department</h6>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Department" asp-action="Create">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>update</th>
                        <th>delete</th>
                        <th>Hide-Show</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DepartmentName</td>
                                <td><a class="btn btn-success" asp-area="Admin" asp-controller="Department" asp-action="Update" asp-route-id="@item.Id">Edit</a></td>
                                <td><a class="btn btn-danger" asp-area="Admin"  asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                @if (item.IsDeleted == false)
                                {
                                    <td><a class="btn btn-warning" asp-area="Admin"  asp-controller="Department" asp-action="Hide" asp-route-id="@item.Id">Hide</a></td>
                                }
                                @if (item.IsDeleted == true)
                                {
                                    <td><a class="btn btn-warning" asp-area="Admin" asp-controller="Department" asp-action="Show" asp-route-id="@item.Id">Show</a></td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <p>No data</p>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
